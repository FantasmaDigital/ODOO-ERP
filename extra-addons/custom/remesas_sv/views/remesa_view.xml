<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    
    <!-- VISTA LISTA DE LAS REMESAS REALIZADAS -->
    <record id="view_list_remesa_sv" model="ir.ui.view">
      <field name="name">remesa.sv.list</field>
      <field name="model">remesa.sv</field>
      <field name="arch" type="xml">
        <list string="Remesas Realizadas" decoration-bf="state=='open'" decoration-muted="state=='cancel'">
          <field name="name"/>
          <field name="fecha_remesa"/>
          <field name="banco_id"/>
          <field name="cuenta_id"/>
          <field name="origen_id"/>
          <field name="state"/>
          <field name="total"  sum="Total Remesado"/>
        </list>
      </field>
    </record>
    
    <!-- VISTA FORMULARIO PARA REGISTRO DE LAS REMESAS -->
    <record id="view_remesa_sv_form" model="ir.ui.view">
      <field name="name">remesa.sv.form</field>
      <field name="model">remesa.sv</field>
      <field name="arch" type="xml">
        <form string="Remesas">
          <header>
            <button name="validar" invisible="state != 'draft'" type="object" string="Validar" class="oe_highlight" />
            <button name="borrador" invisible="state != 'cancel'" type="object" string="Borrador" class="oe_highlight" />
            <button name="contabilizar_remesa" invisible="state != 'open'" type="object" string="Contabilizar" class="oe_highlight" />
            <button name="cancel" invisible="state not in ('draft', 'open', 'entered')" type="object" string="Cancelar" class="oe_highlight"/>
            <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,open,entered" statusbar_colors='{"draft":"blue","entered":"gray"}'/>
          </header>
          <sheet string="Remesas">
            <group>
              <h1>
                <field name="name"/>
              </h1>
              <group col="2">
                <field name="fecha_remesa" readonly="state != 'draft'"/>
              </group>
              <group col="2">
                <field name="origen_id" widget="many2one_list" readonly="state != 'draft'"/>
                <field name="banco_id" widget="many2one_list" readonly="state != 'draft'"/>
                <field name="cuenta_id" widget="many2one_list" readonly="state != 'draft'"/>
              </group>
              <group col="2">
                <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="state != 'draft'"/>
                <field name="referencia" readonly="state != 'draft'"/>
              </group>
              <group col="2">
                <field name="responsable_id" widget="selection" readonly="state != 'draft'"/>
              </group>
              <group col="2">
                <field name="usuario_id" readonly="state != 'draft'"/>
              </group>
            </group>
            <notebook>
              <page string="Asientos Contables" invisible="state != 'entered'">
                <field name="list_asientos" mode="list,kanban" nolabel="1" readonly="1">
                  <list>
                    <field name="asiento_contable_id" string="Asiento Contable"/>
                  </list>
                  <form>
                    <field name="asiento_contable_id" string="Asiento Contable"/>
                  </form>
                  <kanban class="o_kanban_mobile">
                    <field name="asiento_contable_id" string="Asiento Contable"/>
                    <templates>
                      <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                          <div class="row">
                            <div class="col-xs-12">
                              <strong><span><t t-esc="record.asiento_contable_id.value"/></span></strong>
                            </div>
                          </div>
                        </div>
                      </t>
                    </templates>
                  </kanban>
                </field>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    
    <!--CREAMOS LA ACCION QUE LLAMARA LA VISTA TREE PARA QUE SE CARGUE AUTOMATICAMENTE-->
    <record id="action_remesa_sv_tree" model="ir.actions.act_window">
      <field name="name">Remesas</field>
      <field name="res_model">remesa.sv</field>
      <field name="view_mode">list,form</field><!-- pendiente ,calendar,graph-->
      <field name="view_id" ref="view_list_remesa_sv"/>
      <!--   <field name="context">{'type':'out_invoice'}</field>
      <field name="search_view_id" ref="view_account_invoice_filter"/>-->
    </record>
    <record id="view_graph_remesa_sv" model="ir.ui.view">
      <field name="name">view_graph_remesa_sv</field>
      <field name="model">remesa.sv</field>
      <field name="arch" type="xml">
        <graph string="Remesas">
          <field name="fecha_remesa" type="row" />
          <field name="total" type="measure"/>
        </graph>
      </field>
    </record>
    <record id="action_remesa_sv_graph" model="ir.actions.act_window">
      <field name="name">Remesas</field>
      <field name="res_model">remesa.sv</field>
      <field name="view_mode">list,form,graph</field><!-- pendiente ,calendar,graph-->
      <field name="view_id" ref="view_graph_remesa_sv"/>
    </record>
    <!-- top level menu: no parent 
    <menuitem id="main_openacademy_menu" name="Open Academy"/>
    A first level in the left side menu is needed
    before using action= attribute 
    <menuitem id="openacademy_menu" name="Open Academy"
    parent="menu_finance_bank_and_cash"/>
    the following menuitem should appear *after*
    its parent openacademy_menu and *after* its
    action course_list_action -->
    <!-- <menuitem id="remesas" name="remesas sv"></menuitem>-->
    <menuitem id="reg_remesa_menu" name="Remesas" parent="account.menu_finance_entries" action="action_remesa_sv_tree"/>
    <menuitem id="gra_remesa_menu" name="Graficos Remesas" parent="account.menu_finance_entries" action="action_remesa_sv_graph"/>
    <!-- Full id location:
    action="openacademy.course_list_action"
    It is not required when it is the same module -->
  </data>
</odoo>
