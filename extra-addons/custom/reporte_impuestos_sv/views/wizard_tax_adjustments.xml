<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone Tax Adjustments Wizard for El Salvador (Odoo 19) -->
    <!-- The core tax.adjustments.wizard was removed in Odoo 17+     -->
    <record id="tax_adjustments_wizard_sv_view" model="ir.ui.view">
        <field name="name">tax.adjustments.wizard.sv.form</field>
        <field name="model">tax.adjustments.wizard.sv</field>
        <field name="arch" type="xml">
            <form string="Ajuste de Impuestos SV">
                <group>
                    <group>
                        <field name="reason"/>
                        <field name="date"/>
                        <field name="journal_id"/>
                        <field name="company_id" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="tax_id"/>
                        <field name="amount"/>
                        <field name="debit_account_id"/>
                        <field name="credit_account_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_move" type="object" string="Crear Asiento" class="btn-primary"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tax_adjustments_wizard_sv" model="ir.actions.act_window">
        <field name="name">Ajuste de Impuestos SV</field>
        <field name="res_model">tax.adjustments.wizard.sv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>